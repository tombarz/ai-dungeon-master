{
    "extends":  "../../tsconfig.json",
    "compilerOptions":  {
                            "outDir":  "dist",
                            "rootDir":  "src",
                            "module":  "commonjs",
                            "target":  "ES2021",
                            "types":  [
                                          "node"
                                      ],
                            "emitDecoratorMetadata":  true,
                            "experimentalDecorators":  true,
                            "strict":  true,
                            "noImplicitAny":  true,
                            "sourceMap":  true,
                            "incremental":  true,
                            "lib":  [
                                        "ES2021",
                                        "DOM"
                                    ],
                            "moduleResolution":  "node"
                        },
    "include":  [
                    "src/**/*"
                ],
    "exclude":  [
                    "node_modules",
                    "dist"
                ]
}
