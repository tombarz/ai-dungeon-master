    "clean": "rm -rf dist"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-native": "^0.72.6",
    "react-native-web": "^0.19.6",
    "@ai-dungeon-master/models": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.2.2",
    "vitest": "^0.34.6",
    "@types/react": "^18.2.37",
    "@types/react-native": "^0.72.6"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-native": ">=0.70.0"
  }
}
